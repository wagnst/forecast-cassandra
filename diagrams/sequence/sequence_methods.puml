":ForecastWS" -[#0000FF]> ":FixedCostsService" : getFixedCostsKpis(planPeriod, currentPeriod, curr)
group getFixedCostsKpis()
":FixedCostsService" -[#0000FF]> ":ExchangeRateRequest" : new ExchangeRateRequest(getConnection(), toCurrency)
